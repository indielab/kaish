# Interpolation Edge Cases
# Tests string interpolation with various tricky inputs

# Empty string interpolation
set EMPTY = ""
echo "before${EMPTY}after"

# Multiple vars in one string
set A = "one"
set B = "two"
set C = "three"
echo "${A} ${B} ${C}"

# Adjacent interpolations (no space)
echo "${A}${B}${C}"

# Nested path in interpolation
set OBJ = {"inner": {"value": "nested"}}
echo "got: ${OBJ.inner.value}"

# Array index in interpolation
set ARR = ["zero", "one", "two"]
echo "index 1: ${ARR[1]}"

# $? fields in interpolation
echo "test output"
echo "ok=${?.ok} code=${?.code}"

# Numbers in interpolation
set NUM = 42
set FLOAT = 3.14
echo "int=${NUM} float=${FLOAT}"

# Boolean in interpolation
set FLAG = true
echo "flag is ${FLAG}"

# Null in interpolation
set NOTHING = null
echo "nothing: ${NOTHING}"

# Long string
set LONG = "this is a somewhat longer string that might stress things"
echo "${LONG}"

# Special characters in string (not interpolation)
echo "quotes: \" backslash: \\ tab: \t newline: \n"
