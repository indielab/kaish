#!/usr/bin/env kaish
source lib.kai

# fg fails in non-interactive mode (no terminal)
fg
check "$?" "1" "fg fails in non-interactive mode"

# bg fails in non-interactive mode (no stopped jobs)
bg
check "$?" "1" "bg fails in non-interactive mode"

# kill with no args should fail
kill
check "$?" "1" "kill requires arguments"

# kill with invalid job reference should fail
kill "%999"
check "$?" "1" "kill fails with nonexistent job"

# kill with invalid signal name should fail
kill --signal BOGUS 1
check "$?" "1" "kill fails with unknown signal"

# kill with invalid PID should fail
kill 999999999
check "$?" "1" "kill fails with nonexistent PID"

# jobs builtin works
jobs
check_ok "$?" "jobs runs without error"

summary
